
 <div class="container">
  <h1><strong> Crear Usuario para Turnos Bancarios </strong></h1>

      <%= form_with model: @user do |form| %>
         <% if @user.errors.any? %>
            <div class="alert alert-danger" role="alert">
               <strong>ðŸš«AtenciÃ³n hay errores:</strong>
                <ul>
                 <% @user.errors.each do |error| %>
                   <li><%= error.full_message %></li>
                 <% end %>
                </ul>
            </div>
         <% end %>

      <div class="container">
        <div class="form-group">  
            <div>
                <%= form.label :username, style: "display: block" %>
                <%= form.text_field :username %>
            </div>
            <% if current_user&.Administrador? %>
              <div>
                  <%= form.label :role, style: "display: block"%>
                  <%= form.select :role, options_for_select(role_users) %>
              </div>
              <div>
                  <%= form.label "Sucursal Bancaria (Solo en caso de ser rol Personal Bancario)", style: "display: block"%>
                  <%= form.collection_select :bank_branch_id, bank_branches_all, 
                      :id, :to_string %>
              </div>    

            <% end %>
            <div>
                <%= form.label :password, style: "display: block" %>
                <%= form.password_field :password%>
            </div>

            <div>
            <br> 
                <%= form.submit "Registrar", :class => "btn btn-outline-success"  %>
            </div>
        </div>
      </div>         
  
      <% end %>
</div>
